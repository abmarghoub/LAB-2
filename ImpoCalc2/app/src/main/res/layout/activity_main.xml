<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E3A59"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nom_label"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/input_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nom_hint"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adresse_label"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/input_adresse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/adresse_hint"
        android:inputType="textPostalAddress"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/surface_label"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/input_surface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/surface_hint"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pieces_label"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/input_pieces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pieces_hint"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">


        <CheckBox
            android:id="@+id/checkbox_piscine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/piscine"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/button_calcul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/button_calculer"
            android:backgroundTint="#2E3A59"
            android:textColor="#FFFFFF"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#2E3A59"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

</LinearLayout>
